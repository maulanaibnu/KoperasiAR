    <LinearLayout
        android:id="@+id/linearPusatBantuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgPusatBantuan"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:tint="@color/black"
            android:layout_marginStart="25dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/help" />

        <TextView
            android:id="@+id/tvToEditPusatBantuan"
            style="@style/AppTheme.TextTittle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="@string/pusat_bantuan"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/arrowPusatBantuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5.6dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imglogout"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:tint="@color/black"
            android:layout_marginStart="25dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_logout" />

        <TextView
            android:id="@+id/tvLogout"
            style="@style/AppTheme.TextTittle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="@string/logout"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>

