<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@android:color/white"
    android:elevation="4dp"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/textOrderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order ID: #123456"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/textOrderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Pending"
        android:textSize="14sp"
        android:textColor="@android:color/holo_red_dark"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/textOrderTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: Rp. 250,000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/textOrderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: 01/02/2025"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:paddingBottom="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Detail"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/textOrderDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:paddingBottom="4dp" />

</LinearLayout>
